<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>

  <%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div class="form-error">
  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
  </div>
<% end %>

  <p>Title</p>
  <%= f.text_field :title, class: "book_title" %>
  <p>Opinion</p>
  <%= f.text_area :body, class: "book_opinion" %>
  <%= f.submit 'Update book' %>

  <% end %>

  <%= link_to "Show", book_path(@book) %>
  <%= link_to "back", books_path %>
  </div>
</div>

