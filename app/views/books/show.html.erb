<div class="col-xs-3">
    <h2>User info</h2>
    <div class="profile">
      <%= attachment_image_tag @books.user,:profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpeg"%>
    </div>
    <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @books.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @books.user.introduction %></th>
      </tr>
    </tbody>
    </table>



<div class="row">
<% if @books.user.id == current_user.id %>
  <%= link_to "", edit_user_path(@books.user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_5239"%>
<% else %>
  <%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_5239"%>
<% end %>
</div>

<h2>New Book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div class="form-error">
  <h2><%= @book.errors.count %>errors</h2>
  <ul>
  <% @book.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  </div>
<% end %>
  <p>Title</p>
  <%= f.text_field :title, class: "book_title" %>
  <p>Opinion</p>
  <%= f.text_area :body, class: "book_opinion" %>
  <%= f.submit 'create book' %>
<% end %>
</div>

<div class="col-xs-9">
<h2>Books detail</h2>
  <table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@books.user) do %>
        <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpeg" %>
        <% end %>
        <br>
        <%= link_to @books.user.name, user_path(@books.user) %>
      </td>
      <td>
        <%= @books.title %>
      </td>
      <td>
        <%= @books.body %>
      </td>
      <td>
        <% if @books.user_id == current_user.id %>
        <%= link_to "Edit",edit_book_path(@books)%>
        <% end %>
      </td>
      <td>
        <% if @books.user_id == current_user.id %>
        <%= link_to "Destroy",  book_path(@books), method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
  </table>
</div>