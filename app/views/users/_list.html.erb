
<div class="col-xs-3">
    <h2>User info</h2>
    <div class="profile">
      <%= attachment_image_tag user,:profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpeg"%>
    </div>
    <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
    </table>



<div class="row">
<% if @user.id == current_user.id %>
  <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_5239"%>
<% else %>
  <%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_5239"%>
<% end %>
</div>

<h2>New Book</h2>
<%= form_for(book) do |f| %>
<% if book.errors.any? %>
  <div class="form-error">
  <h2><%= book.errors.count %>件のエラーが発生しました。</h2>
  <ul>
  <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
  </div>
<% end %>
  <p>Title</p>
  <%= f.text_field :title, class: "book_title" %>
  <p>Opinion</p>
  <%= f.text_area :body, class: "book_opinion" %>
  <%= f.submit 'create book' %>
<% end %>
</div>